<!DOCTYPE html>
<html>
<head>
    <%- include('partials/head') %>
</head>
<body>
    <!-- Include your navigation and other header elements here -->
    <%- include('partials/mainNav.ejs') %>
    <div class="container mt-5">
        <h1 class="text-center">Add a New Product</h1>

        <div class="row">
            <div class="col-md-6">
                <!-- Left Column -->
                <form action="/products/create" method="POST">
                    <div class="form-group">
                        <label for="name">Product Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter product name" required>
                    </div>

                    <div class="form-group">
                        <label for="brand">Brand Name</label>
                        <input type="text" class="form-control" id="brand" name="brand" placeholder="Enter brand name" required>
                    </div>

                    <div class="form-group">
                        <label for="category">Category</label>
                        <select class="form-control" id="category" name="category" required>
                            <option value="">Select a category</option>
                            <option value="Clothing & Apparel">Clothing & Apparel</option>
                            <option value="Footwear & Shoes">Footwear & Shoes</option>
                            <option value="Electronics & Gadgets">Electronics & Gadgets</option>
                            <option value="Games & Toys">Games & Toys</option>
                            <option value="Veterinary & Pet Items">Veterinary & Pet Items</option>
                            <option value="Stationery">Stationery</option>
                            <option value="Hand & Power Tools">Hand & Power Tools</option>
                            <option value="Tupperware">Drinks</option>
                            <option value="Furniture">Furniture</option>
                            <option value="Sports Products">Sports Products</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="description">Product Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter product description" required></textarea>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Right Column -->
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" id="price" name="price" placeholder="Enter price" required min="0">
                        <!-- Added min="0" to specify minimum price value of 0 -->
                    </div>

                    <div class="form-group">
                        <label for="countInStock">Count in Stock</label>
                        <input type="number" class="form-control" id="countInStock" name="countInStock" placeholder="Enter count in stock" required min="1">
                        <!-- Added min="1" to specify minimum countInStock value of 1 -->
                    </div>

                    <div class="form-group">
                        <label for="imageUrl">Image URL</label>
                        <input type="text" class="form-control" id="imageUrl" name="imageUrl" placeholder="Enter image URL" required>
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary">Create Product</button>
                    <a href="/products/addProduct" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>

    <%- include('partials/footer') %>
    
</body>
</html>
